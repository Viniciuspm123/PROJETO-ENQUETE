-- 1. Cria a tabela de votos

CREATE TABLE tbl_votos (

  id INT AUTO_INCREMENT PRIMARY KEY,

  opcao_nome VARCHAR(100) NOT NULL UNIQUE,

  total_votos INT DEFAULT 0

);

 

